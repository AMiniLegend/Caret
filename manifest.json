{
    "name": "Caret",
    "description": "Professional text editing for Chrome and Chrome OS",
    "version": "0.0.15",
    "manifest_version": 2,
    "icons": {
      "128": "icon-128-2.png"
    },

    "app": {
        "background": {
            "scripts": [ "background.js" ]
        }
    },
    
    "permissions": [
      "clipboardRead",
      "clipboardWrite",
      "contextMenus",
      "storage",
      {
        "fileSystem": [ "write", "retainEntries" ]
      }
    ],

    "kiosk_enabled": false,
    "offline_enabled": true,
    
    "file_handlers": {
      "text": {
        "extensions": [
          "as",
          "as3",
          "asm",
          "c",
          "cpp",
          "coffee",
          "conf",
          "cs",
          "csh",
          "css",
          "csv",
          "diff",
          "el",
          "ejs",
          "go",
          "h",
          "htm",
          "html",
          "htmls",
          "java",
          "js",
          "json",
          "log",
          "lua",
          "man",
          "manifest",
          "md",
          "mdoc",
          "me",
          "patch",
          "pl",
          "py",
          "rake",
          "rb",
          "sh",
          "shtml",
          "text",
          "tsv",
          "txt",
          "vcf",
          "xml",
          "yaml",
          "yml",
          "zsh"
        ],
        "title": "Caret",
        "types": [ 
          "application/javascript",
          "application/json",
          "application/x-shellscript",
          "application/xml",
          "text/*"
        ]
      }
   }
}
