{
    "name": "Caret",
    "description": "Professional text editing for Chrome and Chrome OS",
    "version": "0.0.6",
    "manifest_version": 2,
    "icons": {
      "128": "icon.png"
    },

    "app": {
        "background": {
            "scripts": [ "background.js" ]
        }
    },
    
    "permissions": [
      "clipboardRead",
      "clipboardWrite",
      "contextMenus",
      "storage",
      {
        "fileSystem": [ "write", "retainEntries" ]
      }
    ],

    "default_locale": "en",
    "kiosk_enabled": false,
    "offline_enabled": true
}
