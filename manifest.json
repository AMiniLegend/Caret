{
    "name": "Caret",
    "description": "Sublime text editing for Chrome",
    "version": "0.0.1",
    "manifest_version": 2,
    "icons": {
      "128": "icon.png"
    },

    "app": {
        "background": {
            "scripts": [ "background.js" ]
        }
    },
    
    "permissions": [
      "clipboardRead",
      "clipboardWrite",
      "contextMenus",
      "storage",
      {
        "fileSystem": [ "write", "retainEntries" ]
      }
    ]
}